
@{
    ViewBag.Title = "EditOrder";
}

@model GalleryCafeWeb.Models.Order
<h2>Edit Order</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.OrderID)

    <div class="form-group">
        <label for="Customer">Customer</label>
        @Html.DisplayFor(model => model.Customer.CusName)
    </div>

    <div class="form-group">
        <label for="OrderDate">Order Date</label>
        @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label for="TotalAmount">Total Amount</label>
        @Html.EditorFor(model => model.TotalAmount, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a href="@Url.Action("ViewOrders")" class="btn btn-default">Cancel</a>
}


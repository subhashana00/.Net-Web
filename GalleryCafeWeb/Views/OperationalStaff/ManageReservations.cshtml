
@{
    ViewBag.Title = "ManageReservations";
}

@model IEnumerable<GalleryCafeWeb.Models.Reservation>
<section class="manage-reservations">
    <h2>Manage Reservations</h2>
    <!-- Back Button -->
    <a href="@Url.Action("OperationalStaffView", "OperationalStaffView")" class="btn btn-secondary">Back to Staff View</a>
    <table class="table">
        <thead>
            <tr>
                <th>CustomerID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Date</th>
                <th>Time</th>
                <th>Table Type</th> <!-- Update to reflect the new model -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.CustomerID</td>
                    <td>@reservation.ResName</td>
                    <td>@reservation.ResEmail</td>
                    <td>@reservation.ResPhoneNumber</td>
                    <td>@reservation.ResDate</td>
                    <td>@reservation.ResTime</td>
                    <td>@reservation.ResMessage</td> <!-- Update to reflect the new model -->
                    <td>
                        <!-- Edit link for reservation -->
                        <a href="@Url.Action("EditReservation", "OperationalStaff", new { id = reservation.ReservationID })" class="btn btn-sm btn-warning">Edit</a>
                        <!-- Delete link for reservation -->
                        <a href="@Url.Action("DeleteReservation", "OperationalStaff", new { id = reservation.ReservationID })" class="btn btn-sm btn-danger">Delete</a>
                        <!-- Download PDF link for reservation -->
                        <a href="@Url.Action("DownloadReservationPDF", "OperationalStaff", new { id = reservation.ReservationID })" class="btn btn-sm btn-primary">Download PDF</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<style>
    .manage-reservations {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .manage-reservations h2 {
            font-size: 2.5rem;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
            font-family: 'Arial', sans-serif;
        }

        .manage-reservations a.btn {
            margin: 10px 0;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .manage-reservations a.btn-secondary {
            background-color: #6c757d;
            color: white;
        }

            .manage-reservations a.btn-secondary:hover {
                background-color: #5a6268;
            }

        .manage-reservations table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .manage-reservations table th,
            .manage-reservations table td {
                padding: 12px 15px;
                border: 1px solid #ddd;
                text-align: left;
            }

            .manage-reservations table th {
                background-color: #007bff;
                color: white;
                font-weight: bold;
            }

            .manage-reservations table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .manage-reservations table tbody tr:hover {
                background-color: #f1f1f1;
            }

        .manage-reservations a.btn-warning {
            background-color: #ffc107;
            color: #fff;
        }

            .manage-reservations a.btn-warning:hover {
                background-color: #e0a800;
            }

        .manage-reservations a.btn-danger {
            background-color: #dc3545;
            color: #fff;
        }

            .manage-reservations a.btn-danger:hover {
                background-color: #c82333;
            }

        .manage-reservations a.btn-primary {
            background-color: #007bff;
            color: #fff;
        }

            .manage-reservations a.btn-primary:hover {
                background-color: #0056b3;
            }
</style>
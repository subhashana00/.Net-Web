
@{
    ViewBag.Title = "ViewOrders";
}

<h2>Customer Orders</h2>
<!-- Back to Dashboard button -->
<a href="@Url.Action("OperationalStaffView", "OperationalStaffView")" class="btn btn-secondary">Back to Dashboard</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.CustomerID</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <!-- Edit button -->
                    <a href="@Url.Action("EditOrder", "Order", new { id = order.OrderID })" class="btn btn-primary">Edit</a>
                    <!-- Delete button -->
                    <form action="@Url.Action("DeleteOrder", "Order", new { id = order.OrderID })" method="post" style="display:inline-block;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Delete</button>
                    </form>
                    <!-- Print button -->
                    <a href="@Url.Action("GeneratePDF", "Order", new { orderId = order.OrderID })" class="btn btn-success">Print</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

        .table th {
            background-color: #f2f2f2;
        }

    .btn {
        padding: 8px 12px;
        text-decoration: none;
        margin-right: 5px;
        color: white;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-secondary {
        background-color: #6c757d;
    }
    /* Back to Dashboard button */

    .btn:hover {
        opacity: 0.8;
    }

    h2 {
        margin-bottom: 20px;
    }

    .btn-secondary {
        margin-bottom: 20px;
    }
</style>


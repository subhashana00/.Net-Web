@model GalleryCafeWeb.Models.Customer
@{
    ViewBag.Title = "Login";
}

<div class="login-container">
    <h2>Customer Login</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal creative-login-form">
            <h4>Login</h4>
            <hr />
            
            @* Only show the validation summary if ModelState is invalid *@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true, "Login failed. Please correct the errors.")
                </div>
            }

            <div class="form-group">
                @Html.Label("Username or Email", new { @class = "control-label" })
                <input type="text" name="usernameOrEmail" class="form-control" required />
            </div>
            <div class="form-group">
                @Html.Label("Password", new { @class = "control-label" })
                <input type="password" name="password" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary creative-btn" />
            </div>
        </div>
    }
</div>


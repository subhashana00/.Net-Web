@model GalleryCafeWeb.Models.Customer
@{
    ViewBag.Title = "EditCustomer";
}

<h2>Edit Customer</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <!-- Hidden fields for CustomerID and RowVersion -->
        @Html.HiddenFor(model => model.CustomerID)
        @Html.HiddenFor(model => model.RowVersion)
        <div class="form-group">
            @Html.LabelFor(model => model.CusName)
            @Html.TextBoxFor(model => model.CusName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CusEmail)
            @Html.TextBoxFor(model => model.CusEmail, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CusUsername)
            @Html.TextBoxFor(model => model.CusUsername, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CusPasswordHash)
            @Html.TextBoxFor(model => model.CusPasswordHash, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn" />
        </div>
        <a href="@Url.Action("ManageUsers")" class="btn btn-back">Back to Manage Users</a>
    </div>
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 20px;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        font-size: 2.2em;
        position: relative;
    }

    h2::after {
        content: '';
        display: block;
        width: 50px;
        height: 3px;
        background: #28a745; /* Green underline */
        margin: 10px auto;
        border-radius: 5px;
    }

    .form-horizontal {
        background: #ffffff;
        border-radius: 8px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        max-width: 600px; /* Max width for form */
        margin: 20px auto; /* Center the form */
    }

    hr {
        border: 0;
        border-top: 1px solid #28a745; /* Green hr */
        margin: 20px 0;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: 600;
        color: #555;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease; /* Transition effects */
    }

    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5); /* Green shadow */
    }

    .btn {
        display: inline-block;
        padding: 10px 15px;
        border-radius: 5px; /* Slightly rounded corners */
        text-decoration: none;
        font-weight: bold; /* Bold font */
        color: #fff;
        background-color: #007bff; /* Primary button color */
        border: none; /* No border */
        transition: background-color 0.3s ease, transform 0.2s ease; /* Transition effects */
    }

    .btn:hover {
        background-color: #0056b3; /* Darker blue on hover */
        transform: translateY(-2px); /* Lift effect */
    }

    /* Back Button */
    .btn-back {
        background-color: #6c757d; /* Gray background */
        margin-top: 15px;
    }

    .btn-back:hover {
        background-color: #5a6268; /* Darker gray on hover */
    }

    /* Responsive Styles */
   
        h2 {
            font-size: 1.8em; /* Smaller heading on mobile */
        }

        .form-horizontal {
            padding: 20px; /* Adjust padding for mobile */
        }

        .form-control {
            padding: 10px; /* Smaller padding on mobile */
        }

        .btn {
            width: 100%; /* Full-width button on mobile */
        }
    
</style>

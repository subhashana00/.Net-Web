
@{
    ViewBag.Title = "AdminView";
}

<!-- Admin Dashboard Section -->
<section class="admin-dashboard">
    <div class="dashboard-container">
        <h2>Welcome, Admin!</h2>
        <p>You have successfully logged in.</p>
        <!-- Admin actions or options as cards -->
        <div class="admin-options">
            <div class="option-card">
                <a href="/AdminView/ManageUsers">
                    <i class="fas fa-users"></i>
                    <h3>Manage Users</h3>
                    <p>View and manage all registered users.</p>
                </a>
            </div>
            <div class="option-card">
                <a href="/Admin/ViewReports">
                    <i class="fas fa-chart-line"></i>
                    <h3>View Reports</h3>
                    <p>Analyze reports and monitor performance.</p>
                </a>
            </div>
            <div class="option-card">
                <a href="/Admin/ManageMenu">
                    <i class="fas fa-utensils"></i>
                    <h3>Manage Menu</h3>
                    <p>Update and customize the restaurant menu.</p>
                </a>
            </div>
        </div>
        <!-- Logout button -->
        <form action="/AdminAccount/Logout" method="post">
            <button type="submit" class="logout-button">Logout</button>
        </form>
    </div>
</section>

<!-- CSS Styles -->
<style>
    body {
        font-family: 'Lato', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .admin-dashboard {
        padding: 50px;
        text-align: center;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px;
        border-radius: 10px;
    }

    .dashboard-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .admin-options {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin-top: 30px;
    }

    .option-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        width: 220px;
        margin: 10px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .option-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    .option-card a {
        text-decoration: none;
        color: #333;
    }

    .option-card i {
        font-size: 40px;
        color: #007bff;
        margin-bottom: 10px;
    }

    .option-card h3 {
        margin: 10px 0;
        font-size: 18px;
        font-weight: 600;
        color: #007bff;
    }

    .option-card p {
        font-size: 14px;
        color: #666;
    }

    .logout-button {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #ff0000;
        color: white;
        border: none;
        cursor: pointer;
        font-size: 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .logout-button:hover {
        background-color: #cc0000;
    }

    /* Responsive Styles */
    
        .option-card {
            width: 100%; /* Full width on small screens */
            margin: 10px 0; /* Add margin to top and bottom */
        }

        .admin-options {
            flex-direction: column; /* Stack cards vertically */
            align-items: center; /* Center cards */
        }
    }
</style>
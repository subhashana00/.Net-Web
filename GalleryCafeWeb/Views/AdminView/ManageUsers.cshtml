@model IEnumerable<GalleryCafeWeb.Models.Customer>
@{
    ViewBag.Title = "ManageUsers";
}


<h2>Manage Users</h2>
<!-- Back Button -->
<a href="@Url.Action("AdminView", "AdminView")" class="btn btn-secondary">Back to Admin Dashboard</a>
<!-- Display Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.CusName</td>
                <td>@customer.CusEmail</td>
                <td>@customer.CusUsername</td>
                <td>
                    <a href="@Url.Action("EditCustomer", new { id = customer.CustomerID })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("DeleteCustomer", new { id = customer.CustomerID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("CreateCustomer")" class="btn btn-success">Add New Customer</a>
<style>
    body {
        font-family: 'Lato', sans-serif;
        background: linear-gradient(to right, #e2e2e2, #ffffff);
        margin: 0;
        padding: 20px;
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
        font-size: 2.5em;
        text-transform: uppercase;
        letter-spacing: 1px;
        position: relative;
    }

        h2::after {
            content: '';
            display: block;
            width: 60px;
            height: 4px;
            background: #007bff;
            margin: 10px auto;
            border-radius: 5px;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden; /* Make rounded corners effective */
        background: #fff;
    }

        .table thead {
            background: linear-gradient(to right, #007bff, #00c6ff);
            color: #fff;
        }

        .table th,
        .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
            transition: background-color 0.3s ease;
        }

        .table td:last-child {
            display: flex;
            justify-content: space-around; /* Align action buttons */
        }

    .btn {
        display: inline-block;
        padding: 5px 10px; /* Reduced padding */
        border-radius: 20px; /* Smaller radius */
        text-decoration: none;
        font-weight: 600; /* Bold font */
        color: #fff;
        transition: background-color 0.3s ease, transform 0.2s ease; /* Transition effects */
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-success {
        background-color: #28a745;
        margin-top: 20px;
        display: block; /* Center button below the table */
    }

    .btn:hover {
        transform: scale(1.05); /* Slightly increase size on hover */
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Darker blue */
    }

    .btn-danger:hover {
        background-color: #c82333; /* Darker red */
    }

    .btn-success:hover {
        background-color: #218838; /* Darker green */
    }

    /* Responsive Styles */

    h2 {
        font-size: 2em; /* Smaller heading on mobile */
    }

    .table {
        font-size: 14px; /* Smaller font size on mobile */
    }

    .btn {
        width: 100%; /* Full-width buttons on mobile */
        margin: 5px 0; /* Margin between buttons */
        padding: 8px; /* Adjust padding for mobile */
    }
</style>
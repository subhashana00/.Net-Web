<script>
    // Search functionality
    document.getElementById('search-btn').addEventListener('click', function() {
        const searchValue = document.getElementById('search').value.toLowerCase();
        const items = document.querySelectorAll('.menu-item');

        items.forEach(item => {
            const itemName = item.querySelector('h3').textContent.toLowerCase();
            const itemCuisine = item.getAttribute('data-cuisine').toLowerCase();

            if (itemName.includes(searchValue) || itemCuisine.includes(searchValue)) {
                item.style.display = 'block'; // Show matching items
            } else {
                item.style.display = 'none'; // Hide non-matching items
            }
        });
    });

    // Filter by cuisine buttons
    const categoryButtons = document.querySelectorAll('.menu-btn');
    categoryButtons.forEach(button => {
        button.addEventListener('click', function() {
            const selectedCuisine = this.getAttribute('data-cuisine');
            const items = document.querySelectorAll('.menu-item');

            // Remove active class from all buttons
            categoryButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');

            // Filter menu items based on selected cuisine
            items.forEach(item => {
                const itemCuisine = item.getAttribute('data-cuisine');

                if (selectedCuisine === 'all' || itemCuisine === selectedCuisine) {
                    item.style.display = 'block'; // Show items that match the selected cuisine
                } else {
                    item.style.display = 'none'; // Hide items that don't match
                }
            });
        });
    });

    // Show all items when the page loads
    document.addEventListener('DOMContentLoaded', function() {
        const items = document.querySelectorAll('.menu-item');
        items.forEach(item => {
            item.style.display = 'block'; // Display all items initially
        });
    });
</script>


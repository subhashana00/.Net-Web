
@model GalleryCafeWeb.Models.Customer
@{
    ViewBag.Title = "Details";
}
<div class="card">
    <div class="card-header">
        <h3>Account Details</h3>
    </div>
    <div class="card-body">
        <p><strong>Username:</strong> @Model.CusUsername</p>
        <p><strong>Email:</strong> @Model.CusEmail</p>
        <p><strong>Name:</strong> @Model.CusName</p>
       
        <!-- Add any other relevant information here -->
    </div>
    <div class="card-footer">
        <a href="~/UserLoginView/UserLoginPage" class="btn btn-primary">Back to Home</a>
    </div>
</div>

